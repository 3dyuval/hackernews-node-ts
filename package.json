{
	"name": "hackernews-node-ts",
	"version": "1.0.0",
	"private": "false",
	"description": "Hackernews API using GraphQL, Prisma and Typescript",
	"main": "src/main.ts",
	"scripts": {
		"debug-server": "cross-env NODE_ENV=development ts-node-dev --transpile-only --respawn --inspect=4321 --project server/main.ts",
		"dev-server": "cross-env NODE_ENV=development ts-node-dev --exit-child --respawn server/main.ts",
		"fusionauth": "docker-compose up",
		"dev": "concurrently \"npm run fusionauth\" \"npm run yoga\" ",
		"build": "rimraf ./build && tsc",
		"start": "concurrently \"npm run fusionauth\" \"npm run build && node build/main.js\""
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@fusionauth/typescript-client": "^1.45.0",
		"@prisma/client": "^4.3.0",
		"@types/node": "20.1.0",
		"cross-env": "7.0.3",
		"prisma": "^4.3.0",
		"rimraf": "^5.0.0",
		"ts-node": "10.9.1",
		"ts-node-dev": "2.0.0",
		"typescript": "5.0.4"
	},
	"dependencies": {
		"@apollo/server": "^4.7.5",
		"@devoxa/prisma-relay-cursor-connection": "^2.2.2",
		"@envelop/generic-auth": "^6.0.0",
		"@graphql-tools/schema": "^9.0.19",
		"body-parser": "^1.20.2",
		"concurrently": "^8.2.0",
		"cors": "^2.8.5",
		"express": "^4.18.2",
		"graphql": "^16.7.1",
		"graphql-voyager": "^1.3.0",
		"graphql-yoga": "^4.0.1",
		"jose": "^4.14.4",
		"next-batch": "^0.0.5",
		"node-jose": "^2.2.0",
		"pkce-challenge": "^4.0.1",
		"winston": "^3.9.0"
	}
}
