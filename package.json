{
	"name": "hackernews-node-ts",
	"version": "1.0.0",
	"private": "false",
	"description": "Hackernews API using GraphQL, Prisma and Typescript",
	"main": "src/main.ts",
	"scripts": {
		"debug-server": "cross-env NODE_ENV=development ts-node-dev --transpile-only --respawn --inspect=4321 --project server/main.ts",
		"dev-graphql": "cross-env NODE_ENV=development ts-node-dev --exit-child --respawn server/main.ts",
		"dev-fusionauth": "docker-compose up",
		"dbgenerate": "drizzle-kit generate:pg --schema=./db/drizzle.ts",
		"seed": "ts-node-dev ./db/seed.ts",
		"init-db": "npm run dbgenerate && npm run seed",
		"dev": "concurrently \"npm run fusionauth\" \"npm run dev-server\" ",
		"build": "rimraf ./build && tsc",
		"start": "concurrently \"npm run fusionauth\" \"npm run build && node build/main.js\"",
		"tsc": "tsc --noEmit --skipLibCheck"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@fusionauth/typescript-client": "^1.47.0",
		"@prisma/client": "^5.0.0",
		"@types/node": "20.4.5",
		"cross-env": "^7.0.3",
		"drizzle-kit": "^0.19.12",
		"prisma": "^5.0.0",
		"rimraf": "^5.0.1",
		"ts-node": "10.9.1",
		"ts-node-dev": "2.0.0",
		"typescript": "5.1.6"
	},
	"dependencies": {
		"@apollo/server": "^4.9.0",
		"@devoxa/prisma-relay-cursor-connection": "^2.2.4",
		"@envelop/generic-auth": "^6.0.0",
		"@graphql-tools/schema": "^10.0.0",
		"@types/pg": "^8.10.2",
		"body-parser": "^1.20.2",
		"concurrently": "^8.2.0",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"drizzle-orm": "^0.27.2",
		"express": "^4.18.2",
		"graphql": "^16.7.1",
		"graphql-voyager": "^1.3.0",
		"jose": "^4.14.4",
		"next-batch": "^0.0.5",
		"node-jose": "^2.2.0",
		"pg": "^8.11.1",
		"pkce-challenge": "^4.0.1"
	}
}
