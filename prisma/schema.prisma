datasource db {
  provider = "sqlite"
  url      = "file:./dev.sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Topic {
  id   String @unique
  name String
}

model Link {
  id          Int       @id @default(autoincrement())
  topic       String?
  createdAt   DateTime  @default(now())
  description String
  url         String
  linkComment Comment[]
  user        User?   @relation(fields: [userId], references: [id])
  userId      Int?
}

model Comment {
  id     Int    @id @default(autoincrement())
  body   String
  link   Link?  @relation(fields: [linkId], references: [id])
  linkId Int?
}


model User {
  id    Int @id @default(autoincrement())
  name  String
  email String
  profilePicture  String
  joined  DateTime @default(now())
  userLink Link[]
}